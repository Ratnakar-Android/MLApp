<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/permissions_fragment">

    <fragment
        android:id="@+id/permissions_fragment"
        android:name="com.sdk.camera.fragments.CameraPermissionFragment"
        android:label="CameraPermissionFragment" >

        <argument
            android:name="root_directory"
            android:defaultValue="null"
            app:argType="string" />

        <action
            android:id="@+id/action_permissions_to_face"
            app:destination="@id/face_detection_fragment"
            app:popUpTo="@id/permissions_fragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_permissions_to_text"
            app:destination="@id/text_recognition_fragment"
            app:popUpTo="@id/permissions_fragment"
            app:popUpToInclusive="true" />

    </fragment>


    <fragment
        android:id="@+id/face_detection_fragment"
        android:name="com.sdk.camera.fragments.FaceDetectionFragment"
        android:label="FaceDetectionFragment" >

        <argument
            android:name="image_uri"
            android:defaultValue="Nothing"
            app:argType="string" />


        <action
            android:id="@+id/action_permissions_to_camera"
            app:destination="@id/camera_fragment"
            app:popUpTo="@id/face_detection_fragment"
            app:popUpToInclusive="true" />

    </fragment>


    <fragment
        android:id="@+id/text_recognition_fragment"
        android:name="com.sdk.camera.fragments.TextRecognitionFragment"
        android:label="TextRecognitionFragment" >

        <argument
            android:name="image_uri"
            android:defaultValue="Nothing"
            app:argType="string" />


        <action
            android:id="@+id/action_permissions_to_camera"
            app:destination="@id/camera_fragment"
            app:popUpTo="@id/text_recognition_fragment"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/camera_fragment"
        android:name="com.sdk.camera.fragments.CameraFragment"
        android:label="CameraFragment" >

        <argument
            android:name="root_directory"
            app:argType="string" />

        <action
            android:id="@+id/action_camera_to_permissions"
            app:destination="@id/permissions_fragment"
            app:popUpTo="@id/camera_fragment"
            app:popUpToInclusive="true"/>

        <action
            android:id="@+id/action_camera_to_face"
            app:destination="@id/face_detection_fragment"
            app:popUpTo="@id/camera_fragment"
            app:popUpToInclusive="true"/>

        <action
            android:id="@+id/action_camera_to_text"
            app:destination="@id/text_recognition_fragment"
            app:popUpTo="@id/camera_fragment"
            app:popUpToInclusive="true"/>

    </fragment>


</navigation>